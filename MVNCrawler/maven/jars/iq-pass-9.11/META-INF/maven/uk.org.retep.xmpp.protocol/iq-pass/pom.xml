<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0  http://maven.apache.org/maven-v4_0_0.xsd">

	<parent>
		<groupId>uk.org.retep.xmpp.protocol</groupId>
		<artifactId>model-gen</artifactId>
		<version>9.11</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>

	<groupId>uk.org.retep.xmpp.protocol</groupId>
	<artifactId>iq-pass</artifactId>
	<version>9.11</version>
	<packaging>jar</packaging>

	<name>retepXMPP XMPP Protocol iq-pass</name>

	<dependencies>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.jvnet.jaxb2.maven2</groupId>
				<artifactId>maven-jaxb2-plugin</artifactId>
				<configuration>
					<schemaIncludes>
						<include>org/xmpp/schemas/iq-pass.xsd</include>
					</schemaIncludes>
					<bindingIncludes>
						<include>org/xmpp/schemas/iq-pass.xjb</include>
					</bindingIncludes>
					<episodes>
					</episodes>
				</configuration>
			</plugin>
				<plugin>
					<groupId>org.codehaus.groovy.maven</groupId>
					<artifactId>gmaven-plugin</artifactId>
					<executions>
						<execution>
							<phase>generate-sources</phase>
							<goals>
								<goal>execute</goal>
							</goals>
							<configuration>
								<scriptpath>
									<element>${basedir}/../src/main/script</element>
								</scriptpath>
								<source>
									new Deploy(project,"jabber:iq:pass").process()
								</source>
							</configuration>
						</execution>
					</executions>
				</plugin>
		</plugins>
	</build>

</project>
