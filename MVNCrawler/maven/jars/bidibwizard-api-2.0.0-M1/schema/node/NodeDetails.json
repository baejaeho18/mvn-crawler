{
    "$schema": "http://json-schema.org/draft-06/schema#",
	"definitions": {
		"nodeDetails": {
		    "description": "A NodeDetails following the convention of http://microformats.org/wiki/hcard",
		    "type": "object",
		    "extends" : {
		        "$ref" : "../NodeAddress.json#/definitions/nodeAddress"
		    },
		    "properties": {
		        "featureCount": { "type": "integer" },
		        "portCounts": {
		        	"type": "array",
  				    "uniqueItems": true, 
				    "items": { "$ref": "../common/AbstractPort.json#/definitions/portCountType" }
				}
		    }
	    }
    }
}