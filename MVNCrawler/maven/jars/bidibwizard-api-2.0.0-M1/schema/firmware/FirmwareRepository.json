{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "description": "A FirmwareRepository following the convention of http://microformats.org/wiki/hcard",
    "type" : "object",
    "properties": {
        "manufacturer": { "$ref": "FirmwareDefines.json#/definitions/manufacturerType" },
        "products": { 
            "type": "array", 
            "items": { 
                "$ref" : "FirmwareDefines.json#/definitions/productsType"
            } 
        }
    },
    "required": ["manufacturer"]
}