{
    "$schema": "http://json-schema.org/draft-06/schema#",
	"description": "The port config response of the node in the bidib system.",
    "type": "object",
    "properties": {
    	"connectionId": { "type": "string" },
        "node": { "$ref": "../NodeAddress.json#/definitions/nodeAddress" },
        "port": {
            "$ref": "../common/AbstractPort.json#/definitions/portIdentifier"
        },
        "pcfg": {
            "type": "array",
            "uniqueItems": true,
            "items": {
                "$ref": "AbstractConfigPort.json#/definitions/pcfgType"
            }
        },
        "error": {
            "type": "string"
        }
    },
    "required": ["connectionId", "node", "port"]
}