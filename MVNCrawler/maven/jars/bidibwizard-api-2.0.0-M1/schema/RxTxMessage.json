{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "description": "A RxTxMessage following the convention of http://microformats.org/wiki/hcard",
    "type": "object",
    "properties": {
        "direction" : { "$ref": "RxTxDirection.json#/definitions/rxTxDirection" },
        "messageType": { "type": "string" },
        "data": { "type": "string", "format": "byte" },
        "timestamp": { "type": "string", "format": "date-time" }
    },
    "required": ["direction", "messageType", "data"]
}