<module xmlns="urn:jboss:module:1.3" name="org.wildfly.swarm.undertow">

  <dependencies>
    <!-- For when run with bonafide IDE classpath -->
    <system export="true">
      <paths>
        <path name="org/wildfly/swarm/undertow"/>
        <path name="org/wildfly/swarm/undertow/internal"/>
        <path name="org/wildfly/swarm/undertow/descriptors"/>
      </paths>
    </system>

    <!-- For when bootstrapped through a fat-jar -->
    <module name="org.wildfly.swarm.undertow" slot="api" export="true" services="export"/>

  </dependencies>
</module>
